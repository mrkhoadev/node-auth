<div class="container py-5">
    <h1 class="text-center">Đổi mật khẩu</h1>
    <div class="mx-auto" style="max-width: 400px;">
      <% if (req?.msg) { %>
        <div class="alert alert-success"  role="alert">
          <%= req?.msg %>
        </div>
      <% } %>
      <% if (req?.error) { %>
        <div class="alert alert-danger" role="alert">
          <%= req?.error %>
        </div>
      <% } %>
    </div>
    <form class="mx-auto" style="max-width: 400px;" method="POST">
      <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Email</label>
        <input 
          type="text" 
          name="email" 
          value="<%= req?.old?.email %>" 
          placeholder="Email..." 
          class="form-control" 
          id="exampleInputEmail1" 
          aria-describedby="emailHelp"
        >
        <span class="text-danger"><%= req?.errors?.email %></span>
      </div>
      <div class="mb-3">
        <label for="exampleInputPasswordOld" class="form-label">Mật khẩu cũ</label>
        <input 
          type="password" 
          name="passwordOld" 
          placeholder="Mật khẩu cũ..." 
          class="form-control" 
          id="exampleInputPasswordOld"
        >
        <span class="text-danger"><%= req?.errors?.passwordOld %></span>
      </div>
      <div class="mb-3">
        <label for="exampleInputPasswordNew" class="form-label">Mật khẩu mới</label>
        <input 
          type="password" 
          name="passwordNew" 
          placeholder="Mật khẩu mới..." 
          class="form-control" 
          id="exampleInputPasswordNew"
        >
        <span class="text-danger"><%= req?.errors?.passwordNew %></span>
      </div>
      <div class="mb-3">
        <label for="exampleInputRePassword" class="form-label">Nhập lại mật khẩu</label>
        <input 
          type="password" 
          name="rePassword" 
          placeholder="Nhập lại mật khẩu mới..." 
          class="form-control" 
          id="exampleInputRePassword"
        >
        <span class="text-danger"><%= req?.errors?.rePassword %></span>
      </div>
      <button type="submit" class="btn btn-primary" style="width: 100%;">Gửi</button>
      <div class="form-text pt-2">Bạn đổi ý? <a href="/">Trang chủ</a></div>
    </form>
  </div>